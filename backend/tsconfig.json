{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2019",
        "lib": ["ES2019"],

        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "sourceMap": true,
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src/",

        "baseUrl": "./src/",
        "paths": {
            "@*": ["*"]
        }
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
