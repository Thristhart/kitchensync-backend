{
    "name": "kitchensync-rebuild",
    "version": "0.0.1",
    "description": "Modern rebuild of Kitchensync",
    "main": "backend/dist/main.js",
    "scripts": {
        "build:backend": "tsc -p backend/tsconfig.json",
        "dev:backend": "nodemon -r ./backend/dist/bootstrap.js backend/dist/main.js --config backend/nodemon.json --exec \"npm run build:backend && node\"",
        "build:frontend": "webpack --config ./frontend/webpack.config.js --mode production",
        "dev:frontend": "webpack --config ./frontend/webpack.config.js --mode development --watch",
        "start": "node -r ./backend/dist/bootstrap.js backend/dist/main.js",
        "postinstall": "npm run build:backend && npm run build:frontend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Thristhart/kitchensync-rebuild.git"
    },
    "author": "Tom Shea <tom@shea.at>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Thristhart/kitchensync-rebuild/issues"
    },
    "homepage": "https://github.com/Thristhart/kitchensync-rebuild#readme",
    "devDependencies": {
        "nodemon": "^2.0.1"
    },
    "dependencies": {
        "@babel/core": "^7.9.6",
        "@types/koa": "^2.11.3",
        "@types/koa-bodyparser": "^4.3.0",
        "@types/koa-passport": "^4.0.2",
        "@types/koa-session": "^5.10.2",
        "@types/koa-static": "^4.0.1",
        "@types/koa__router": "^8.0.2",
        "babel-loader": "^8.1.0",
        "dotenv": "^8.2.0",
        "html-webpack-plugin": "^4.3.0",
        "koa": "^2.11.0",
        "koa-bodyparser": "^4.3.0",
        "koa-passport": "^4.1.3",
        "koa-session": "^5.13.1",
        "koa-static": "^5.0.0",
        "node-ts": "^5.0.5",
        "nodemon": "^2.0.3",
        "tsconfig-paths": "^3.9.0",
        "tsconfig-paths-webpack-plugin": "^3.2.0",
        "tslint": "^6.1.2",
        "typescript": "^3.8.3",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.11"
    }
}
